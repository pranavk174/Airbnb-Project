
<%- layout("/layouts/boilerplate") %>
    



<div class="h-[100vh] w-full flex flex-col justify-center items-center  bg-[url('https://wallpapers.com/images/hd/travel-wallpaper-group-cf4dc850xhw9rto5.jpg')] gap-3 text-black">
    <h1 class="font-bold text-[3rem] text-black ">Edit Listings</h1>
   <form class="md:w-[50%]  needs-validation  border shadow-xl bg-white/60  p-[3rem] md:hover:bg-white/30 rounded-xl" action="/edit/<%=data.id %>?_method=PATCH" method=post enctype="multipart/form-data" novalidate>
       <div class="relative z-0 w-full mb-5 group">
           <input type="text" name="title" id="t" class=" is-invalid block py-2.5 px-0 w-full text-sm text-black bg-transparent border-0 border-b-2 border-gray-300 appearance-none dark:text-black dark:border-gray-600 dark:focus:border-blue-500 focus:outline-none focus:ring-0 focus:border-blue-600 peer" placeholder=" " value="<%= data.title %>" required />
           <label for="t" class="peer-focus:font-medium absolute text-sm text-black dark:text-gray-400 duration-300 transform -translate-y-6 scale-75 top-3 -z-10 origin-[0] peer-focus:start-0 rtl:peer-focus:translate-x-1/4 rtl:peer-focus:left-auto peer-focus:text-blue-600 peer-focus:dark:text-blue-500 peer-placeholder-shown:scale-100 peer-placeholder-shown:translate-y-0 peer-focus:scale-75 peer-focus:-translate-y-6">Add Title</label>
           <p class="mt-2  valid-feedback text-red-600 text-sm">
               Please Enter a Valid Title <span><i class="fa fa-exclamation-triangle"></i></span>
           </p>
       </div>
       <div class="relative z-0 w-full mb-5 group">
           <textarea type="text" name="description" id="d"  class=" is-invalid block py-2.5 px-0 w-full text-sm text-black bg-transparent border-0 border-b-2 border-gray-300 appearance-none dark:text-black dark:border-gray-600 dark:focus:border-blue-500 focus:outline-none focus:ring-0 focus:border-blue-600 peer" placeholder="" required > <%=data.description %> </textarea>
           <label for="d" class="peer-focus:font-medium absolute text-sm text-black dark:text-gray-400 duration-300 transform -translate-y-6 scale-75 top-3 -z-10 origin-[0] peer-focus:start-0 rtl:peer-focus:translate-x-1/4 peer-focus:text-blue-600 peer-focus:dark:text-blue-500 peer-placeholder-shown:scale-100 peer-placeholder-shown:translate-y-0 peer-focus:scale-75 peer-focus:-translate-y-6">Add Description</label>
           <p class="mt-2  valid-feedback text-red-600 text-sm">
               Please Enter a Valid Description <span><i class="fa fa-exclamation-triangle"></i></span>
           </p>
       </div>

       <div class="mb-5">
        <p>Original Image</p>
        <img src="<%=dataimage%>" class="w-[8rem]"  alt="">
       </div>

       <div class="relative z-0 w-full mb-5 group">
           <input type="file" name="image" id="i" class=" is-invalid block py-2.5 px-0 w-full text-sm text-black bg-transparent border-0 border-b-2 border-gray-300 appearance-none dark:text-black dark:border-gray-600 dark:focus:border-blue-500 focus:outline-none focus:ring-0 focus:border-blue-600 peer" placeholder=" " value="<%= data.image.url %>" required />
           <label for="i" class="peer-focus:font-medium absolute text-sm text-black dark:text-gray-400 duration-300 transform -translate-y-6 scale-75 top-3 -z-10 origin-[0] peer-focus:start-0 rtl:peer-focus:translate-x-1/4 peer-focus:text-blue-600 peer-focus:dark:text-blue-500 peer-placeholder-shown:scale-100 peer-placeholder-shown:translate-y-0 peer-focus:scale-75 peer-focus:-translate-y-6">Image Url</label>
           <p class="mt-2  valid-feedback text-red-600 text-sm">
               Please Enter a Valid Url <span><i class="fa fa-exclamation-triangle"></i></span>
           </p>
       </div>
       <div class="grid md:grid-cols-2 md:gap-6">
         <div class="relative z-0 w-full mb-5 group">
             <input type="text" id="p" name="price" class=" is-invalid block py-2.5 px-0 w-full text-sm text-black bg-transparent border-0 border-b-2 border-gray-300 appearance-none dark:text-black dark:border-gray-600 dark:focus:border-blue-500 focus:outline-none focus:ring-0 focus:border-blue-600 peer" placeholder=" " value="<%= data.price %>"  required />
             <label for="p" class="peer-focus:font-medium absolute text-sm text-black dark:text-gray-400 duration-300 transform -translate-y-6 scale-75 top-3 -z-10 origin-[0] peer-focus:start-0 rtl:peer-focus:translate-x-1/4 peer-focus:text-blue-600 peer-focus:dark:text-blue-500 peer-placeholder-shown:scale-100 peer-placeholder-shown:translate-y-0 peer-focus:scale-75 peer-focus:-translate-y-6"> Add Price</label>
             <p class="mt-2  valid-feedback text-red-600 text-sm">
               Please Enter a Valid Price <span><i class="fa fa-exclamation-triangle"></i></span>
           </p>         
           </div>
         <div class="relative z-0 w-full mb-5 group">
             <input type="text" name="location" id="l" class=" is-invalid block py-2.5 px-0 w-full text-sm text-black bg-transparent border-0 border-b-2 border-gray-300 appearance-none dark:text-black dark:border-gray-600 dark:focus:border-blue-500 focus:outline-none focus:ring-0 focus:border-blue-600 peer" placeholder=" " value="<%= data.location %>" required />
             <label for="l" class="peer-focus:font-medium absolute text-sm text-black dark:text-gray-400 duration-300 transform -translate-y-6 scale-75 top-3 -z-10 origin-[0] peer-focus:start-0 rtl:peer-focus:translate-x-1/4 peer-focus:text-blue-600 peer-focus:dark:text-blue-500 peer-placeholder-shown:scale-100 peer-placeholder-shown:translate-y-0 peer-focus:scale-75 peer-focus:-translate-y-6">Add Location</label>
             <p class="mt-2  valid-feedback text-red-600 text-sm">
               Please Enter Valid Location <span><i class="fa fa-exclamation-triangle"></i></span>
           </p>
           </div>
       </div>
       <div class="grid md:grid-cols-1 md:gap-6">
         <div class="relative z-0 w-full mb-5 group">
             <input type="text"  name="country" id="c" class=" is-invalid block py-2.5 px-0 w-full text-sm text-black bg-transparent border-0 border-b-2 border-gray-300 appearance-none dark:text-black dark:border-gray-600 dark:focus:border-blue-500 focus:outline-none focus:ring-0 focus:border-blue-600 peer" placeholder=" " value="<%= data.country %>" required />
             <label for="c" class="peer-focus:font-medium absolute text-sm text-black dark:text-gray-400 duration-300 transform -translate-y-6 scale-75 top-3 -z-10 origin-[0] peer-focus:start-0 rtl:peer-focus:translate-x-1/4 peer-focus:text-blue-600 peer-focus:dark:text-blue-500 peer-placeholder-shown:scale-100 peer-placeholder-shown:translate-y-0 peer-focus:scale-75 peer-focus:-translate-y-6">Add Country</label>
             <p class="mt-2  valid-feedback text-red-600 text-sm">
               Please Enter a Valid Country <span><i class="fa fa-exclamation-triangle"></i></span>
           </p>
           </div>
        
       </div>
       <button type="submit" class="text-white bg-red-700 hover:bg-red-800 focus:ring-4 focus:outline-none focus:ring-red-300 font-medium rounded-lg text-sm w-full sm:w-auto px-5 py-2.5 text-center dark:bg-red-600 dark:hover:bg-red-500 dark:focus:ring-blue-800">Submit</button>
     </form>
     
</div>


 
    

